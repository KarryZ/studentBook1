{
    "name": "StudentBook",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "express": "^4",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.108.15",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-studentslist": "cds watch --open studentslist/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy StudentBook --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "auth": {
                "kind": "mocked",
                "users": {
                    "user": {
                        "password": "user"
                    },
                    "admin": {
                        "password": "admin",
                        "roles": [
                            "admin"
                        ]
                    }
                }
            },
            "[production]": {
                "db": "hana",
                "auth": {
                    "kind": "xsuaa"
                }
            }
        }
    },
    "sapux": [
        "app/studentslist"
    ]
}